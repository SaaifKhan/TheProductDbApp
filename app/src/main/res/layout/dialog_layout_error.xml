<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_bg"
    android:backgroundTint="@color/colorWhite">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/retry">
        </com.airbnb.lottie.LottieAnimationView>
        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sfprodisplay_medium"
            android:gravity="center"
            android:text="@string/oops_something_went_wrong"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplay_regular"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/something_wrong"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/retryBtn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/sfprodisplay_semibold"
            android:layout_marginTop="20dp"
            android:text="Retry"
            android:textColor="@color/colorBlack"
            android:background="@drawable/rectangular_side_rounded_with_boder"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>